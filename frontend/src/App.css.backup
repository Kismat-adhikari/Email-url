/* ============================================================================ */
/* APPLE-STYLE MINIMALIST LIGHT MODE APPLICATION DESIGN */
/* ============================================================================ */

/* ROOT CONTAINER */
.App {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-secondary);
}

.container {
  flex: 1;
  width: 100%;
  background: var(--bg-secondary);
  display: flex;
  flex-direction: column;
}

/* ============================================================================ */
/* HEADER - ELEGANT & MINIMAL */
/* ============================================================================ */

.header {
  background: var(--gradient-primary);
  color: var(--text-inverse);
  padding: 2.5rem 3rem;
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
}

/* Subtle light effect */
.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);
  pointer-events: none;
  opacity: 0.5;
}

.header-content {
  position: relative;
  z-index: 1;
  max-width: 1400px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.header h1 {
  font-size: 1.875rem;
  font-weight: 800;
  margin: 0;
  letter-spacing: -0.03em;
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  color: var(--text-inverse);
}

.header p {
  font-size: 0.95rem;
  opacity: 0.95;
  font-weight: 500;
  margin: var(--spacing-sm) 0 0 0;
  color: rgba(255, 255, 255, 0.9);
}

.header-actions {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
  flex-wrap: wrap;
}

.magic-badge {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.95);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-full);
  font-size: 0.85rem;
  font-weight: 600;
  border: 1px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  transition: var(--transition-base);
}

.magic-badge:hover {
  background: rgba(255, 255, 255, 0.25);
  border-color: rgba(255, 255, 255, 0.4);
}

/* ============================================================================ */
/* NAVIGATION & MODE SELECTION */
/* ============================================================================ */

.mode-selector {
  background: var(--bg-primary);
  border-bottom: 1px solid var(--border-light);
  padding: var(--spacing-lg) 3rem;
  box-shadow: var(--shadow-xs);
}

.mode-selector-content {
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
  display: flex;
  gap: var(--spacing-md);
  flex-wrap: wrap;
}

.mode-btn {
  flex: 1;
  min-width: 140px;
  padding: var(--spacing-md) var(--spacing-lg);
  border: 1.5px solid var(--border-light);
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-base);
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  position: relative;
  overflow: hidden;
}

.mode-btn::before {
  content: '';
  position: absolute;
  inset: 0;
  background: var(--primary-bg);
  opacity: 0;
  transition: var(--transition-base);
  z-index: -1;
}

.mode-btn:hover {
  border-color: var(--primary);
  color: var(--primary);
  transform: translateY(-1px);
  background: var(--primary-bg);
}

.mode-btn.active {
  background: var(--gradient-primary);
  color: var(--text-inverse);
  border-color: var(--primary);
  box-shadow: 0 4px 12px rgba(0, 122, 255, 0.2);
  font-weight: 700;
  transform: translateY(-1px);
}

.mode-btn.active::before {
  opacity: 0;
}

/* ============================================================================ */
/* VALIDATION MODE SELECTOR */
/* ============================================================================ */

.validation-mode {
  background: var(--bg-primary);
  border-bottom: 1px solid var(--border-light);
  padding: var(--spacing-lg) 3rem;
}

.validation-mode-content {
  max-width: 1400px;
  margin: 0 auto;
  display: flex;
  gap: var(--spacing-2xl);
  align-items: center;
  flex-wrap: wrap;
}

.validation-mode label {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  cursor: pointer;
  font-weight: 600;
  color: var(--text-secondary);
  font-size: 0.95rem;
  transition: var(--transition-fast);
  user-select: none;
}

.validation-mode label:hover {
  color: var(--text-primary);
}

.validation-mode input[type="radio"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
  accent-color: var(--primary);
}

/* ============================================================================ */
/* MAIN CONTENT AREA */
/* ============================================================================ */

.main-content {
  flex: 1;
  padding: var(--spacing-2xl) 3rem;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
}

/* ============================================================================ */
/* INPUT SECTION - FORM STYLING */
/* ============================================================================ */

.input-section {
  background: var(--bg-primary);
  border: 1.5px solid var(--border-light);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  margin-bottom: var(--spacing-2xl);
  box-shadow: var(--shadow-xs);
  transition: var(--transition-base);
}

.input-section:hover {
  border-color: var(--primary);
  box-shadow: var(--shadow-sm);
}

.input-section:focus-within {
  border-color: var(--primary);
  box-shadow: 0 0 0 3px var(--primary-bg), var(--shadow-sm);
}

.input-section h3 {
  margin-bottom: var(--spacing-lg);
  color: var(--text-primary);
  font-size: 1.25rem;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-group label {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.95rem;
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.input-group label span {
  color: var(--text-secondary);
  font-weight: 500;
  font-size: 0.85rem;
}

.input-group input[type="text"],
.input-group input[type="email"],
.input-group textarea,
.input-group select {
  padding: var(--spacing-md) var(--spacing-lg);
  border: 1.5px solid var(--border-light);
  border-radius: var(--radius-lg);
  font-size: 0.95rem;
  font-family: inherit;
  color: var(--text-primary);
  background: var(--bg-primary);
  transition: var(--transition-base);
  font-weight: 500;
}

.input-group input[type="text"]:focus,
.input-group input[type="email"]:focus,
.input-group textarea:focus,
.input-group select:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px var(--primary-bg);
  background: var(--bg-primary);
}

.input-group textarea {
  resize: vertical;
  min-height: 120px;
  line-height: 1.6;
}

.input-group input[type="text"]::placeholder,
.input-group input[type="email"]::placeholder,
.input-group textarea::placeholder {
  color: var(--text-tertiary);
}

/* ============================================================================ */
/* BUTTONS - PROFESSIONAL STYLING */
/* ============================================================================ */

button {
  font-family: inherit;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: var(--transition-base);
  user-select: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  position: relative;
  overflow: hidden;
}

/* PRIMARY BUTTON */
.btn-primary {
  background: var(--gradient-primary);
  color: var(--text-inverse);
  padding: var(--spacing-md) var(--spacing-xl);
  border-radius: var(--radius-lg);
  font-size: 0.95rem;
  box-shadow: 0 4px 12px rgba(0, 122, 255, 0.2);
  border: none;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 122, 255, 0.3);
}

.btn-primary:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px rgba(0, 122, 255, 0.2);
}

.btn-primary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

/* SECONDARY BUTTON */
.btn-secondary {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border: 1.5px solid var(--primary);
  padding: var(--spacing-md) var(--spacing-xl);
  border-radius: var(--radius-lg);
  font-size: 0.95rem;
}

.btn-secondary:hover {
  background: var(--primary-bg);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 122, 255, 0.1);
}

/* SMALL BUTTON */
.btn-sm {
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: 0.85rem;
  font-weight: 600;
  border-radius: var(--radius-md);
}

/* ICON BUTTON */
.btn-icon {
  width: 40px;
  height: 40px;
  padding: 0;
  border-radius: var(--radius-md);
  background: var(--bg-secondary);
  color: var(--text-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.1rem;
  border: none;
}

.btn-icon:hover {
  background: var(--primary-bg);
  color: var(--primary);
  transform: translateY(-1px);
}

/* ============================================================================ */
/* CARDS & SECTIONS */
/* ============================================================================ */

.section {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  margin-bottom: var(--spacing-2xl);
  border: 1px solid var(--border-light);
  box-shadow: var(--shadow-xs);
  transition: var(--transition-base);
}

.section:hover {
  box-shadow: var(--shadow-sm);
  border-color: var(--border-medium);
}

.section h2 {
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1px solid var(--border-light);
}

/* ============================================================================ */
/* RESULTS CONTAINER */
/* ============================================================================ */

.results-container {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  margin-bottom: var(--spacing-2xl);
  border: 1px solid var(--border-light);
  box-shadow: var(--shadow-xs);
  animation: slideInFade 0.3s ease-out;
}

.results-empty {
  text-align: center;
  padding: var(--spacing-2xl);
  color: var(--text-secondary);
}

.results-empty p {
  font-size: 1rem;
  margin-bottom: var(--spacing-lg);
}

/* ============================================================================ */
/* STATUS BADGES */
/* ============================================================================ */

.badge {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-full);
  font-size: 0.85rem;
  font-weight: 600;
  transition: var(--transition-base);
}

.badge-success {
  background: var(--success-bg);
  color: var(--success-dark);
}

.badge-warning {
  background: var(--warning-bg);
  color: var(--warning-dark);
}

.badge-danger {
  background: var(--danger-bg);
  color: var(--danger-dark);
}

.badge-info {
  background: var(--info-bg);
  color: var(--info-dark);
}

/* ============================================================================ */
/* LOADING & STATES */
/* ============================================================================ */

@keyframes spin {
  to { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@keyframes slideInFade {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% { background-position: -1000px 0; }
  100% { background-position: 1000px 0; }
}

.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid var(--border-light);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* ============================================================================ */
/* RESPONSIVE DESIGN */
/* ============================================================================ */

@media (max-width: 768px) {
  .header {
    padding: 1.5rem 1.5rem;
  }

  .header-content {
    flex-direction: column;
    gap: var(--spacing-lg);
    text-align: center;
  }

  .header h1 {
    font-size: 1.5rem;
    justify-content: center;
  }

  .mode-selector,
  .validation-mode {
    padding: var(--spacing-lg) 1.5rem;
  }

  .mode-selector-content,
  .validation-mode-content {
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .mode-btn {
    min-width: auto;
  }

  .main-content {
    padding: var(--spacing-lg) 1.5rem;
  }

  .input-section {
    padding: var(--spacing-lg);
  }

  h1 { font-size: 1.75rem; }
  h2 { font-size: 1.25rem; }
  h3 { font-size: 1.125rem; }
}

@media (max-width: 480px) {
  .header h1 {
    font-size: 1.25rem;
    gap: var(--spacing-sm);
  }

  .header-actions {
    flex-direction: column;
    width: 100%;
  }

  .input-section {
    padding: var(--spacing-lg) var(--spacing-md);
  }

  .btn-primary,
  .btn-secondary {
    width: 100%;
  }

  h1 { font-size: 1.5rem; }
  h2 { font-size: 1.125rem; }
}


