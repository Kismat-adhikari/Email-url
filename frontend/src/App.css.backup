    width: 100%;
  }

  .input-section {
    padding: var(--spacing-lg) var(--spacing-md);
  }

  .btn-primary,
  .btn-secondary {
    width: 100%;
  }

  h1 { font-size: 1.5rem; }
  h2 { font-size: 1.125rem; }
}
/* ============================================================================ */
/* ENHANCED CHECKBOX STYLING */
/* ============================================================================ */

.pro-checkbox {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  cursor: pointer;
  user-select: none;
  transition: all var(--transition-fast);
  padding: var(--spacing-xs) 0;
  position: relative;
}

.pro-checkbox.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.pro-checkbox input[type="checkbox"] {
  appearance: none;
  -webkit-appearance: none;
  width: 20px;
  height: 20px;
  border: 2px solid var(--border-color);
  border-radius: var(--radius-sm);
  background: var(--bg-primary);
  cursor: pointer;
  position: relative;
  transition: all var(--transition-fast);
  flex-shrink: 0;
}

.pro-checkbox input[type="checkbox"]:hover {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.pro-checkbox input[type="checkbox"]:checked {
  background: var(--primary-color);
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
}

.pro-checkbox input[type="checkbox"]:checked::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 12px;
  font-weight: bold;
  line-height: 1;
}

.pro-checkbox input[type="checkbox"]:disabled {
  cursor: not-allowed;
  opacity: 0.5;
}

.pro-checkbox span {
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--text-primary);
  line-height: 1.4;
}

.pro-checkbox.disabled span {
  color: var(--text-muted);
}

/* SMTP Toggle Specific Styling */
.pro-toggle-row {
  margin: var(--spacing-md) 0;
  padding: var(--spacing-md);
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  transition: all var(--transition-fast);
}

.pro-toggle-row:hover {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-sm);
}

.smtp-toggle-batch {
  margin: var(--spacing-sm) 0;
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--bg-secondary);
  border: 1px solid var(--border-light);
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
}

.smtp-toggle-batch:hover {
  background: var(--bg-primary);
  border-color: var(--primary-color);
}

.pro-hint-text {
  display: block;
  font-size: var(--font-xs);
  color: var(--text-muted);
  margin-top: var(--spacing-xs);
  font-style: italic;
  line-height: 1.3;
}

/* Enhanced SMTP Status Indicator */
.smtp-status-indicator {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: var(--font-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-full);
  font-weight: 500;
  margin-left: var(--spacing-sm);
  transition: all 0.3s ease;
}

.smtp-status-indicator.enabled {
  background: rgba(34, 197, 94, 0.1);
  color: var(--success-color);
  border: 1px solid rgba(34, 197, 94, 0.2);
  animation: enabledPulse 2s ease-in-out infinite;
}

.smtp-status-indicator.disabled {
  background: rgba(156, 163, 175, 0.1);
  color: var(--text-muted);
  border: 1px solid var(--border-light);
}

.smtp-status-indicator.processing {
  background: rgba(59, 130, 246, 0.1);
  color: var(--primary-color);
  border: 1px solid rgba(59, 130, 246, 0.2);
  animation: processingPulse 1.5s ease-in-out infinite;
}

/* Enhanced Status Indicator Icons */
.smtp-status-indicator.enabled::before {
  content: '✓';
  width: auto;
  height: auto;
  border-radius: 0;
  background: transparent;
  font-weight: bold;
  animation: tickBounce 0.5s ease-out;
}

.smtp-status-indicator.disabled::before {
  content: '';
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: currentColor;
  opacity: 0.6;
}

.smtp-status-indicator.processing::before {
  content: '⟳';
  width: auto;
  height: auto;
  border-radius: 0;
  background: transparent;
  animation: spin 1s linear infinite;
}

/* Enhanced Checkbox Styling with Unicode Checkmark (More Reliable) */
.pro-checkbox input[type="checkbox"] {
  appearance: none !important;
  -webkit-appearance: none !important;
  -moz-appearance: none !important;
  width: 20px !important;
  height: 20px !important;
  border: 2px solid var(--border-color) !important;
  border-radius: 4px !important;
  background: var(--bg-primary) !important;
  cursor: pointer !important;
  position: relative !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  flex-shrink: 0 !important;
  outline: none !important;
  margin: 0 !important;
  padding: 0 !important;
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.pro-checkbox input[type="checkbox"]:hover {
  border-color: var(--primary-color) !important;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1) !important;
  transform: scale(1.05) !important;
}

.pro-checkbox input[type="checkbox"]:checked {
  background: var(--primary-color) !important;
  border-color: var(--primary-color) !important;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2) !important;
}

.pro-checkbox input[type="checkbox"]:focus {
  outline: none !important;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.3) !important;
}

/* Unicode Checkmark - More Reliable Than CSS Borders */
.pro-checkbox input[type="checkbox"]:checked::before {
  content: '✓' !important;
  color: white !important;
  font-size: 14px !important;
  font-weight: bold !important;
  line-height: 1 !important;
  animation: tickBounceIn 0.3s ease-out !important;
  display: block !important;
  text-align: center !important;
}

@keyframes tickBounceIn {
  0% { 
    transform: scale(0);
    opacity: 0;
  }
  50% { 
    transform: scale(1.3);
    opacity: 1;
  }
  100% { 
    transform: scale(1);
    opacity: 1;
  }
}

/* Animations */
@keyframes tickBounceIn {
  0% { 
    transform: scale(0);
    opacity: 0;
  }
  50% { 
    transform: scale(1.3);
    opacity: 1;
  }
  100% { 
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes enabledPulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4);
  }
  50% {
    box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.1);
  }
}

@keyframes processingPulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4);
  }
  50% {
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }
}

@keyframes processingPulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4);
  }
  50% {
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }
}

@keyframes tickBounce {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.3);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Dark mode adjustments */
.dark-mode .pro-checkbox input[type="checkbox"] {
  border-color: var(--border-color-dark) !important;
  background: var(--bg-primary-dark) !important;
}

.dark-mode .pro-checkbox input[type="checkbox"]:hover {
  border-color: var(--primary-color) !important;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15) !important;
}

.dark-mode .pro-checkbox input[type="checkbox"]:checked {
  background: var(--primary-color) !important;
  border-color: var(--primary-color) !important;
}

.dark-mode .pro-toggle-row {
  background: var(--bg-primary-dark);
  border-color: var(--border-color-dark);
}

.dark-mode .smtp-toggle-batch {
  background: var(--bg-secondary-dark);
  border-color: var(--border-light-dark);
}

/* ADDITIONAL SPECIFIC SELECTORS FOR SMTP CHECKBOXES */
label.pro-checkbox input[type="checkbox"]:checked::before,
.pro-toggle-row .pro-checkbox input[type="checkbox"]:checked::before,
.smtp-toggle-batch .pro-checkbox input[type="checkbox"]:checked::before {
  content: '✓' !important;
  color: white !important;
  font-size: 14px !important;
  font-weight: bold !important;
  line-height: 1 !important;
  animation: tickBounceIn 0.3s ease-out !important;
  display: block !important;
  text-align: center !important;
}